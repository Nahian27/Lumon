{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lumon",
  "version": "0.1.0",
  "identifier": "com.pulok.Lumon",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Lumon",
        "label": "main",
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "width": 500,
        "height": 300,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
